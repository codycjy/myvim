{
  "configurations": {
    "Launch": {
      "adapter": "vscode-cpptools",
      "configuration": {
        "request": "launch",
	"type": "cppdbg",
	"MIMode":"gdb",	
	"filetypes": [ "cpp", "c", "objc", "rust" ],
        "program": "${fileDirname}/${fileBasenameNo:Extension}",
	"cwd": "${workspaceFolder}",
	"externalConsole": true,
	"preLaunchTask":"build",
	"setupCommands":[
		{
			"description": "Enable pretty-printing for gdb",
                	"text": "-enable-pretty-printing",
	                "ignoreFailures": true
                
		}
	]
      }
    }
  }
}
